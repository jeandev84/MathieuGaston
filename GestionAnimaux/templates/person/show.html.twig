{% extends 'base.html.twig' %}

{% block title %}Personnes{% endblock %}

{% block monTitre %}{{ person.name }}{% endblock %}
{% block body %}
       <h3>Liste des animaux possedes : </h3>
        {% for  dispose in  person.disposes %}
            <div class="row align-items-center">
                <div class="col-2">
                    <img src="{{ asset('images/' ~ dispose.animal.image) }}" alt="">
                </div>
                <div class="col">
                    <h2>
                        <a href="{{ path('animal.show', {'id': dispose.animal.id}) }}">
                            {{ dispose.animal.name }}
                        </a>
                    </h2>
                    <div>
                        Nombre : {{ dispose.nb }}
                    </div>
                </div>
            </div>
        {% endfor %}
{% endblock %}
