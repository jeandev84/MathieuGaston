{% extends 'base.html.twig' %}

{% block title %}Affichage de l'animal{% endblock %}
{% block monTitre %}Affichage de l'animal {{ animal.name }}{% endblock %}
{% block body %}
<div class="row align-items-center">
   <div class="col-2 text-center">
       <img src="{{ asset('images/' ~ animal.image) }}" alt="">
   </div>
   <div class="col-auto">
       <div>Description: {{ animal.description }}</div>
       <div>Weight: {{ animal.weight }}</div>
       <div>
           Dangerous:
           {{ animal.dangerous ? '<span class="badge badge-danger">OUI</span>' : '<span class="badge badge-success">NON</span>'}}
       </div>
       <div>
           <a href="{{ path('familly.show', {'id': animal.familly.id}) }}" class="btn btn-primary">
               {{ animal.familly.libelle }}
           </a>
       </div>
       <div>
           {% for continent in animal.continents %}
               <a href="{{ path('continent.show', {'id': continent.id}) }}" class="btn btn-warning">
                   {{ continent.libelle }}
               </a>
           {% endfor %}
       </div>
       <!-- recuperer les personnes dont dispose un animal en particulier-->
       <div>
           {% for  dispose in  animal.disposes %}
               <a href="{{ path('person.show', {'id': dispose.personnes.id}) }}" class="btn btn-info">{{ dispose.personnes.name }}</a>
           {% endfor %}
       </div>
   </div>
</div>
{% endblock %}

