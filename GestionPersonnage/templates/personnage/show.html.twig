{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{% block monTitre %}
    Personnage {{ perso.nom }}
{% endblock %}

{% block body %}
  <div class="row">
      <div class="col-2">
          <img src="{{ asset('images/personnages/' ~ perso.nom ~ '.png') }}" alt="">
      </div>
      <div class="col">
          <h2>{{ perso.nom }}</h2>
          <div>
              {% if perso.sexe %}
                  Homme
              {% else %}
                  Femme
              {% endif %}
          </div>
          <h3>Les caracteristiques</h3>
          <ul>
              <li>Force : {{ perso.caract.force }}</li>
              <li>Agilite : {{ perso.caract.agi }}</li>
              <li>Intelligence : {{ perso.caract.intel }}</li>
          </ul>
      </div>
  </div>
{% endblock %}
