{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block monTitre %}Liste de tous les aliments{% endblock %}
{% block body %}
 <div class="row">
  {% for aliment in aliments %}
   <div class="col-12 col-md-6 col-lg-4 col-xl-3">
    <div class="card border-primary mb-3 mx-auto" style="max-width: 20rem;">
      <div class="card-header text-center">
       <img src="{{ asset('images/' ~ aliment.image) }}" alt="" class="perso_img_aliment card-img-top">
      </div>
      <div class="card-body">
          <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">
              {{ aliment.name }}
          </h3>
          <p class="cart-text">
              <h4 class="text-center">Prix (kilo): {{  aliment.price }}</h4>
              <table class="table text-center">
                  <tr class="table-primary">
                      <td>Propriete</td>
                      <td>Valeur (100g)</td>
                  </tr>
                  <tr>
                      <td>Calorie</td>
                      <td>{{ aliment.calorie }}</td>
                  </tr>
                  <tr>
                      <td>Proteines</td>
                      <td>{{ aliment.proteine }}</td>
                  </tr>
                  <tr>
                      <td>Glucides</td>
                      <td>{{ aliment.glucide }}</td>
                  </tr>
                  <tr>
                      <td>Lipides</td>
                      <td>{{ aliment.lipide }}</td>
                  </tr>
              </table>
          </p>
      </div>
    </div>
   </div>
  {% endfor %}
 </div>
{% endblock %}
