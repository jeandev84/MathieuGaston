{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}

{% block monTitre %}
 {% if isModification %}
     Modification {{ aliment.name }}
 {% else %}
     Ajout d'un aliment
 {% endif %}
{% endblock %}
{% block body %}
 {{ form_start(form) }}
<div class="row">
 <div class="col-6">
  <img src="{{ asset('images/' ~ aliment.image) }}" style="width: 25%;">
  <div>
     {{ form_row(form.image, {'attr': {'placeholder': 'aliments/myimage.png'}}) }}
  </div>
  <div>
   {{ form_row(form.name, {'attr': {'class': 'text-danger bg-success'}, 'label': "Nom de l'aliment"}) }}
  </div>
 </div>
 <div class="col-6">
  {{ form_widget(form) }}
 </div>
</div>
 <input type="submit" class="btn btn-primary" value="Enregistrer">
 {{ form_end(form) }}
{% endblock %}
